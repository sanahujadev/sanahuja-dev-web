---
// src/pages/demo/mdx-toolkit.astro
import Split from "../../../components/mdx/Split.astro";
import BentoGrid from "../../../components/mdx/BentoGrid.astro";
import BentoItem from "../../../components/mdx/BentoItem.astro";
import Accordion from "../../../components/mdx/Accordion.astro";
import Callout from "../../../components/mdx/Callout.astro";
import Heading from "../../../components/mdx/Heading.astro";
import List from "../../../components/mdx/List.astro";
import ListItem from "../../../components/mdx/ListItem.astro";
import BaseLayout from "../../../layouts/BaseLayout.astro";

const title = "Demo MDX ToolKit - SanahujaDev";
const description = "Zoo de componentes MDX para testear TDD";
---

<BaseLayout lang="es">
    <Fragment slot="head">
        <title>{title}</title>
        <meta name="description" content={description} />
    </Fragment>

    <main class="bg-neutral-950 text-white p-8 space-y-16">
        <!-- SPLIT 50-50 -->
        <section>
            <h1 class="text-3xl font-bold mb-6">Split 50-50</h1>
            <Split data-testid="split-50-50" ratio="50-50">
                <div data-slot="left" slot="left">
                    Contenido texto izquierda
                </div>
                <div data-slot="right" slot="right">Imagen derecha</div>
            </Split>
        </section>

        <!-- SPLIT REVERSE -->
        <section>
            <h2 class="text-2xl font-bold mb-4">Split Reverse (60-40)</h2>
            <Split data-testid="split-reverse" ratio="60-40" reverse>
                <div slot="left">Texto a la derecha visualmente</div>
                <div slot="right">Esta imagen va primero en reverse</div>
            </Split>
        </section>

        <!-- BENTO GRID -->
        <section>
            <h2 class="text-2xl font-bold mb-4">BentoGrid</h2>
            <BentoGrid data-testid="bento-demo">
                <BentoItem
                    data-testid="bento-item-span-2"
                    title="Astro"
                    span="2">El framework web para contenido.</BentoItem
                >
                <BentoItem data-testid="bento-item-tailwind" title="Tailwind"
                    >Utilidades atómicas.</BentoItem
                >
                <BentoItem
                    data-testid="bento-item-gradient"
                    title="React"
                    rowSpan="2"
                    gradient>Para interactividad compleja.</BentoItem
                >
            </BentoGrid>
        </section>

        <!-- ACCORDION -->
        <section>
            <h2 class="text-2xl font-bold mb-4">Accordion</h2>
            <Accordion
                data-testid="accordion-closed"
                title="Pregunta cerrada por defecto"
            >
                Contenido oculto hasta el click
            </Accordion>
            <Accordion
                data-testid="accordion-open"
                title="Pregunta abierta"
                open
            >
                Contenido visible desde el inicio
            </Accordion>
        </section>

        <!-- CALLOUT -->
        <section>
            <h2 class="text-2xl font-bold mb-4">Callout</h2>
            <Callout
                data-testid="callout-info"
                type="info"
                title="Cuidado con la Hidratación"
            >
                Recuerda usar `client:visible` solo cuando sea estrictamente
                necesario.
            </Callout>
            <Callout
                data-testid="callout-danger"
                type="danger"
                title="¡Zona de Peligro!"
            >
                Si ejecutas este comando, **no hay vuelta atrás**.
            </Callout>
        </section>

        <!-- HEADING DEMO -->
        <section class="mb-12">
            <Heading as="h2" size="lg" gradient testid="heading-h2-demo-title"
                >Heading Component Demo</Heading
            >

            <div class="space-y-8 mt-8">
                <!-- H3 con ID -->
                <Heading
                    as="h3"
                    size="md"
                    id="mi-anclaje-personalizado"
                    testid="heading-h3-anchor"
                >
                    H3 con ID para Anclaje
                </Heading>

                <!-- H3 con Custom Class -->
                <Heading
                    as="h3"
                    size="sm"
                    class="text-purple-500 my-8"
                    testid="heading-h3-custom"
                >
                    H3 con clase custom
                </Heading>

                <!-- H3 XL (Simulando visualmente un H1 pero semánticamente H3) -->
                <Heading as="h3" size="xl" testid="heading-h3-xl">
                    Este es un H3 XL (Simulado)
                </Heading>

                <!-- H3 con Gradiente -->
                <Heading
                    as="h3"
                    size="lg"
                    gradient
                    testid="heading-h2-gradient"
                >
                    H3 con Gradiente y Línea
                </Heading>
            </div>
        </section>

        <section class="mb-12">
            <Heading as="h2" size="lg" gradient>List Component Demo</Heading>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
                <div>
                    <Heading as="h3" size="sm" class="mb-4"
                        >Ordered List</Heading
                    >
                    <List type="ordered" testid="list-ordered">
                        <ListItem>Primer ítem con número</ListItem>
                        <ListItem>Segundo ítem sigue la secuencia</ListItem>
                        <ListItem>Tercer ítem automático</ListItem>
                    </List>
                </div>

                <div>
                    <Heading as="h3" size="sm" class="mb-4"
                        >Unordered List</Heading
                    >
                    <List type="unordered" testid="list-unordered">
                        <ListItem>Ítem con bullet custom</ListItem>
                        <ListItem>Diseño consistente</ListItem>
                        <ListItem>
                            <span slot="icon">✅</span>
                            Ítem con icono personalizado (slot)
                        </ListItem>
                    </List>
                </div>
            </div>
        </section>
    </main>
</BaseLayout>
