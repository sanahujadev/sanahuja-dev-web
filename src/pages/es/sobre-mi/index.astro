---
import LandingSobreMi from "../../../components/pages/LandingSobreMi.astro";
import copy_es from "../../../i18n/es/sobre-mi.json" with { type: "json" };

const alternateUrl = new URL(copy_es.alternateUrl, Astro.site).href;

// Después de `const alternateUrl = ...` y antes del `<Landing...>`
const schema = {
  "@context": "https://schema.org",
  "@type": "ProfilePage",
  mainEntity: {
    "@type": "Person",
    name: "José Javier Sanahuja",
    alternateName: "SanahujaDev",
    jobTitle: "Consultor y Socio Digital en Canarias",
    description: copy_es.metadata.description,
    url: new URL(Astro.url.pathname, Astro.site).href,
    sameAs: [
      "https://www.fiverr.com/josejsanahuja/create-a-full-stack-application",
      "https://www.linkedin.com/in/jjsanahuja/",
      "https://github.com/jjsanahuja",
    ],
  },
};
---
<LandingSobreMi copy={copy_es} alternateUrl={alternateUrl} schema={schema} />