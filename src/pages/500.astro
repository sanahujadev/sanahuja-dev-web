---
// src/pages/500.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";

interface Props {
  error?: unknown;
}

const { error } = Astro.props;
---

<BaseLayout lang="es" alternateUrl="">
    <Fragment slot="head">
    <title>500 - Error Interno</title>
    <meta name="description" content="Error Interno" />
  </Fragment>
  <main class="min-h-screen flex items-center justify-center bg-neutral-950 relative overflow-hidden">
    
    {/* Background Effects - Red/Amber Tint */}
    <div class="absolute inset-0 pointer-events-none">
       <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-red-900/20 via-neutral-950 to-neutral-950"></div>
       <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-red-500/10 rounded-full blur-[120px]"></div>
    </div>

    <div class="relative z-10 text-center px-6 max-w-2xl mx-auto">
      
      {/* Icono de Alerta */}
      <div class="flex justify-center mb-6">
        <div class="w-24 h-24 rounded-full bg-red-500/10 border-2 border-red-500/50 flex items-center justify-center animate-pulse">
            <svg class="w-12 h-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
      </div>

      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
        Error <span class="text-red-500">500</span>
      </h1>

      <h2 class="text-xl md:text-2xl font-semibold text-neutral-200 mb-4">
        Algo ha salido mal en la sala de máquinas.
      </h2>
      
      <p class="text-neutral-400 mb-8 max-w-lg mx-auto leading-relaxed">
        Nuestros servidores han tenido un pequeño cortocircuito. No eres tú, somos nosotros. Estamos trabajando para arreglarlo.
      </p>

      {/* Mostrar el error solo si estamos en desarrollo (opcional) */}
      {error instanceof Error && import.meta.env.DEV && (
        <div class="bg-red-950/50 border border-red-900 rounded-lg p-4 mb-8 text-left overflow-auto max-h-40">
            <p class="text-red-300 font-mono text-xs">{error.message}</p>
        </div>
      )}

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/" variant="default">
            Recargar Página (F5)
        </Button>
        <Button href="/es/contacto" variant="outline">
            Contactar Soporte
        </Button>
      </div>

    </div>
  </main>
</BaseLayout>