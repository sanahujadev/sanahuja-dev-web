---
// src/components/ui/cards/HubFeatureCard.astro
import ArrowRight from '../icons/ArrowRight.astro';
import Gift from '../icons/Gift.astro';
import Package from '../icons/Package.astro';
import User from '../icons/User.astro';
import FileText from '../icons/FileText.astro';

interface Card {
    url: string;
    badge: string;
    title: string;
    description: string;
    icon: string;
}

interface Style {
    border: string;
    badgeBg: string;
    badgeText: string;
    iconColor: string;
    titleHover: string;
}

interface Props {
  card: Card;
  style: Style;
  seeMoreText: string;
}

const { card, style, seeMoreText } = Astro.props;

const hubIconMap: Record<string, any> = {
  "Gift": Gift,
  "Package": Package,
  "User": User,
  "FileText": FileText
};

const Icon = hubIconMap[card.icon] || Package;
---
<a href={card.url} class="group block h-full">
    <div class={`bg-gradient-to-br from-neutral-800 to-neutral-900 border-2 ${style.border} rounded-xl p-6 space-y-4 transition-all duration-300 hover:scale-105 h-full`}>
        <div class="space-y-3">
            <div class={`inline-flex items-center gap-2 px-3 py-1 ${style.badgeBg} border rounded-full`}>
                <Icon class={`w-4 h-4 ${style.iconColor}`} aria-hidden="true" focusable="false" />
                <span class={`text-xs font-semibold ${style.badgeText}`}>{card.badge}</span>
            </div>
            <h3 class={`text-xl font-bold text-foreground ${style.titleHover} transition-colors`}>
                {card.title}
            </h3>
        </div>
        <p class="text-sm text-muted-foreground leading-relaxed">
            {card.description}
        </p>
        <div class={`flex items-center gap-2 ${style.iconColor} text-sm font-semibold`}>
            {seeMoreText}
            <ArrowRight class="w-4 h-4 group-hover:translate-x-1 transition-transform" aria-hidden="true" focusable="false" />
        </div>
    </div>
</a>
