---
interface Props {
    src: string; // La URL base (sin extensión ni sufijos)
    alt: string;
    class?: string;
}

const { src, alt, class: className } = Astro.props;

// Lógica específica para tu estructura de CDN/imágenes
const avifSrc = `${src}/avif/thumbnail.avif`;
const webpSrc = `${src}/webp/thumbnail.webp`;
const jpegSrc = `${src}/jpeg/thumbnail.jpeg`;
---

<picture>
    <source srcset={avifSrc} type="image/avif" />
    <source srcset={webpSrc} type="image/webp" />
    <img 
        src={jpegSrc} 
        alt={alt} 
        class={className}
        loading="lazy"
        decoding="async"
    />
</picture>