---
// src/components/ui/FeatureListItem.astro
interface Props {
    Icon: Astro.Component;
    title: string;
    description: string;
}

const { Icon, title, description } = Astro.props;
---
<div class="flex items-start gap-3">
    <Icon class="w-5 h-5 text-accent-400 mt-0.5 flex-shrink-0" />
    <div>
        <p class="text-foreground font-medium">{title}</p>
        <p class="text-muted-foreground text-sm">{description}</p>
    </div>
</div>
