---
// src/components/pages/LandingTerminosYCondiciones.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

// Tipos
import type { TerminosYCondicionesCopy } from '../../i18n/utils';

interface Props {
  copy: TerminosYCondicionesCopy;
  alternateUrl: string;
  schema: Record<string, any>;
}

const { copy, alternateUrl, schema } = Astro.props;
const { copy: t, lang, metadata } = copy;

---

<BaseLayout lang={lang as "es" | "en"} alternateUrl={alternateUrl}>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} slot="json-ld" />
  <Fragment slot="head">
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
  </Fragment>
  <main>
  {/* Hero Section */}
  <section>
    <div>
      <h1>{t.hero.title}</h1>
      <p>{t.hero.lastUpdated}</p>
    </div>
  </section>

  {/* Content Sections */}
  <section>
    <div>
      {t.sections.map((section, i) => (
        <div>
          <h2><span>{i + 1}.</span>
          {section.title}
          </h2>
          <div set:html={section.content} />
        </div>
      ))}
    </div>
  </section>

  {/* Contact Section */}
  <section>
    <div>
      <p>¿Tienes dudas sobre estos términos?</p>
      <a href="mailto:josejavier@sanahuja.dev">
        josejavier@sanahuja.dev
      </a>
    </div>
  </section>
</main>
</BaseLayout>