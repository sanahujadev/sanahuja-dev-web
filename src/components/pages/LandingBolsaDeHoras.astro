---
// src/components/pages/LandingBolsaDeHoras.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import Button from "../../components/ui/Button.astro";
import Badge from "../../components/ui/Badge.astro";

// Iconos de la Orquesta (Existentes)
import Clock from "../../components/ui/icons/Clock.astro";
import ArrowRight from "../../components/ui/icons/ArrowRight.astro";
import CheckCircle2 from "../../components/ui/icons/CheckCircle2.astro";
import AlertOctagon from "../../components/ui/icons/AlertOctagon.astro";
import ShieldAlert from "../../components/ui/icons/ShieldAlert.astro";
import PenTool from "../../components/ui/icons/PenTool.astro";
import RefreshCw from "../../components/ui/icons/RefreshCw.astro";
import Unlock from "../../components/ui/icons/Unlock.astro";
import UserCheck from "../../components/ui/icons/UserCheck.astro";

// Tipos
import type { BolsaDeHorasCopy } from "../../i18n/utils";

interface Props {
  copy: BolsaDeHorasCopy;
  alternateUrl: string;
  schema: Record<string, any>;
}

const { copy, alternateUrl, schema } = Astro.props;
const { copy: t, lang, metadata } = copy;
---

<BaseLayout lang={lang as "es" | "en"} alternateUrl={alternateUrl}>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} slot="json-ld" />
  <Fragment slot="head">
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
  </Fragment>

  <main class="min-h-screen bg-background">
    
    <section id="hero" class="relative py-24 sm:py-32 overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,111,0,0.15)_0%,transparent_50%)] pointer-events-none" aria-hidden="true"></div>
      
      <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          
          <div>
            <Badge variant="v0_primary" class="mb-6">
              <Clock class="w-3 h-3 mr-1.5" />
              {t.hero.badge}
            </Badge>

            <h1 class="font-bold text-4xl sm:text-5xl lg:text-6xl tracking-tight text-balance mb-6">
              <span class="text-foreground">{t.hero.h1_part1} </span>
              <span class="text-primary-400">{t.hero.h1_part2}</span>
            </h1>

            <div class="text-lg sm:text-xl leading-relaxed text-muted-foreground mb-10 text-pretty">
                <p set:html={t.hero.h1_lead} />
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
              <Button 
                href={t.hero.ctas.primary.url} 
                variant="primary" 
                size="lg" 
                class="shadow-lg shadow-primary-500/20 group"
              >
                {t.hero.ctas.primary.text}
                <ArrowRight class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" />
              </Button>
              <Button 
                href={t.hero.ctas.secondary.url} 
                variant="outline" 
                size="lg"
                class="bg-neutral-900/50 border-neutral-700 text-neutral-50 hover:bg-neutral-800"
                aria-label={t.hero.ctas.secondary.ariaLabel}
              >
                {t.hero.ctas.secondary.text}
              </Button>
            </div>
          </div>

          <div class="relative">
            <div class="absolute inset-0 bg-primary-500/10 blur-3xl pointer-events-none" aria-hidden="true"></div>
            <div class="relative bg-gradient-to-br from-neutral-900 to-neutral-900/50 border border-primary-500/20 rounded-2xl p-10">
              <div class="text-center mb-8">
                <div class="inline-block bg-primary-500/10 rounded-2xl p-6 mb-4">
                  <Clock class="w-16 h-16 text-primary-400" />
                </div>
                <h2 class="text-2xl font-bold text-foreground mb-2">{t.hero.heroVisual.title}</h2>
                <p class="text-muted-foreground">{t.hero.heroVisual.subtitle}</p>
              </div>

              <div class="grid grid-cols-3 gap-4" data-testid="hero-stats">
                {t.hero.heroVisual.stats.map((stat, index) => {
                    // Estilos V0 Hardcodeados para coincidir con el diseño visual
                    let divClasses = "bg-neutral-950/50 border border-border rounded-xl p-4 text-center";
                    let valueClasses = "text-3xl font-bold text-accent-400 mb-1";
                    
                    if (index === 1) { // El del medio (tiempo respuesta)
                        divClasses = "bg-neutral-950/50 border border-primary-500/30 rounded-xl p-4 text-center";
                        valueClasses = "text-3xl font-bold text-primary-400 mb-1";
                    }

                    return (
                        <div class={divClasses}>
                            <div class={valueClasses}>{stat.value}</div>
                            <div class="text-xs text-muted-foreground">{stat.unit ? `${stat.unit} ${stat.label}`: stat.label}</div>
                        </div>
                    );
                })}
              </div>
            </div>
          </div>

        </div>
      </div>
    </section>

    <section id="pain-points" class="py-20 bg-neutral-900/30 border-y border-border">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
          <Badge variant="v0_secondary" class="mb-6">
            {t.sections.painPoints.badge}
          </Badge>
          <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight text-foreground text-balance mb-4">
            {t.sections.painPoints.title}
          </h2>
          <p class="text-lg text-muted-foreground max-w-3xl mx-auto text-pretty">
            {t.sections.painPoints.content}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {t.sections.painPoints.useCases.map((useCase, index) => {
                // Mapeo de iconos según índice/contexto V0
                const IconComponents = [AlertOctagon, ShieldAlert, PenTool, RefreshCw];
                const CurrentIcon = IconComponents[index];

                return (
                    <div class="bg-card/50 border border-border rounded-xl p-6 hover:border-primary-500/30 transition-colors">
                        <div class="bg-primary-500/10 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
                            <CurrentIcon class="w-6 h-6 text-primary-400" />
                        </div>
                        <h3 class="text-lg font-semibold text-foreground mb-2">{useCase.problem}</h3>
                        <p class="text-sm text-muted-foreground leading-relaxed">
                            {useCase.description}
                        </p>
                    </div>
                );
            })}
        </div>
      </div>
    </section>

    <section id="benefits" class="py-20">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight text-foreground text-balance">
            {t.sections.benefits.title}
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {t.sections.benefits.featureCards.map((feature, index) => {
                // Icon selection logic
                let IconComponent;
                if (feature.icon === 'Clock') {
                    IconComponent = Clock;
                } else if (index === 0) { // Sin Ataduras
                    IconComponent = Unlock;
                } else if (index === 2) { // Prioridad
                    IconComponent = UserCheck;
                } else {
                    IconComponent = Clock; // Default
                }

                return (
                    <div class="bg-gradient-to-br from-neutral-900 to-neutral-900/50 border border-secondary-500/20 rounded-2xl p-8">
                        <div class="bg-secondary-500/10 w-14 h-14 rounded-xl flex items-center justify-center mb-6">
                            <IconComponent class="w-7 h-7 text-secondary-400" />
                        </div>
                        <h3 class="text-xl font-bold text-foreground mb-3">{feature.title}</h3>
                        <p class="text-muted-foreground leading-relaxed">
                            {feature.description}
                        </p>
                    </div>
                );
            })}
        </div>
      </div>
    </section>

    <section id="pricing" class="py-20 bg-neutral-900/30">
      <div class="max-w-5xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
          <Badge variant="v0_accent" class="mb-6">
            {t.sections.pricing.badge}
          </Badge>
          <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight text-foreground text-balance">
            {t.sections.pricing.title}
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {t.sections.pricing.packs.map((pack) => (
                <div 
                    class:list={[
                        pack.highlight 
                        ? "bg-gradient-to-br from-primary-900/20 to-neutral-900 border-2 border-primary-500/30 relative" 
                        : "bg-neutral-900 border border-border",
                        "rounded-2xl p-8"
                    ]} 
                    data-pack-card={pack.highlight ? "pro" : "inicio"}
                >
                    {pack.highlight && (
                        <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                            <Badge class="bg-primary-500 text-neutral-950 border-0 shadow-lg">
                                {pack.badge}
                            </Badge>
                        </div>
                    )}

                    <div class="mb-6">
                        <h3 class="text-2xl font-bold text-foreground mb-2">{pack.name}</h3>
                        <div class={`text-4xl font-bold mb-1 ${pack.highlight ? 'text-primary-400' : 'text-foreground'}`}>
                            {pack.hours}
                        </div>
                        <div class="text-muted-foreground">{pack.price}</div>
                    </div>

                    <ul class="space-y-3 mb-8">
                        {pack.features.map(feature => (
                            <li class="flex items-start gap-3">
                                <CheckCircle2 class="w-5 h-5 text-accent-400 mt-0.5 flex-shrink-0" />
                                <span class="text-muted-foreground">{feature}</span>
                            </li>
                        ))}
                    </ul>

                    <Button 
                        href={t.sections.ctaFinal.url} 
                        variant={pack.highlight ? 'primary' : 'outline'} 
                        class={`w-full ${!pack.highlight && 'border-neutral-700 hover:bg-neutral-800'}`}
                    >
                        {pack.cta}
                    </Button>
                </div>
            ))}
        </div>
      </div>
    </section>

    <section id="cta-final" class="py-24 sm:py-32">
      <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-semibold tracking-tight text-foreground text-balance mb-6">
          {t.sections.ctaFinal.title}
        </h2>
        <p class="text-lg sm:text-xl leading-relaxed text-muted-foreground max-w-2xl mx-auto mb-10 text-pretty">
          {t.sections.ctaFinal.content}
        </p>
        <Button 
            href={t.sections.ctaFinal.url} 
            variant="primary" 
            size="lg" 
            class="shadow-lg shadow-primary-500/20 group"
        >
          {t.sections.ctaFinal.cta}
          <ArrowRight class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" />
        </Button>
        <p class="mt-8 text-sm text-muted-foreground">{t.sections.ctaFinal.subtext}</p>
      </div>
    </section>

  </main>
</BaseLayout>