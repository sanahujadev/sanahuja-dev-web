---
// src/components/pages/LandingPackSocioTecnicoDigital.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import Badge from "../../components/ui/Badge.astro";
import Button from "../../components/ui/Button.astro";
import ArrowRight from "../../components/ui/icons/ArrowRight.astro";
import Shield from "../../components/ui/icons/Shield.astro";
import Check from "../../components/ui/icons/Check.astro";
import Package from "../../components/ui/icons/Package.astro";
import BarChart from "../../components/ui/icons/BarChart.astro";
import FileText from "../../components/ui/icons/FileText.astro";
import Cookie from "../../components/ui/icons/Cookie.astro";
import Camera from "../../components/ui/icons/Camera.astro";
import Envelope from "../../components/ui/icons/Envelope.astro";
import IncludedServiceCard from "../../components/ui/cards/IncludedServiceCard.astro";
import type { PackSociotecnicoDigitalCopy } from "../../i18n/utils";

interface Props {
  copy: PackSociotecnicoDigitalCopy;
  alternateUrl: string;
  schema: Record<string, any>;
}

const { copy, alternateUrl, schema } = Astro.props;

const { copy: t, lang, metadata } = copy;

const iconMap: Record<string, any> = {
  Shield,
  BarChart,
  FileText,
  Cookie,
  Camera,
  Envelope, // (Â¡Nuevo!)
};

const processContent = (
  content: string,
  strongClass: string = "font-semibold",
): string => {
  return content
    .replace(/\ \[cite:.*?\ \]/g, "")
    .replace(/\*\*([^*]+)\*\*/g, `<strong class="${strongClass}">$1</strong>`);
};
---

<BaseLayout lang={lang as "es" | "en"} alternateUrl={alternateUrl}>
  <Fragment slot="head">
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
  </Fragment>

  <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} slot="json-ld" />

  <main data-page="pack-sociotecnico-digital">

    <section id="hero-pack" class="relative pt-32 pb-20 px-4 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-primary-950/20 via-background to-background" aria-hidden="true"></div>
      
      <div class="relative max-w-7xl mx-auto">
        <div class="flex justify-center mb-8">
          <Badge variant="v0_secondary">
            <Package class="w-4 h-4 mr-1.5" />
            {t.heroBadge}
          </Badge>
        </div>

        <div class="text-center mb-12">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 text-balance">
            <span class="text-foreground">{t.h1_part1}</span>
            <span class="block text-primary-500 mt-2">{t.h1_part2}</span>
          </h1>
          <p class="text-xl md:text-2xl text-muted-foreground max-w-4xl mx-auto text-pretty leading-relaxed">
            {t.h1_lead}
          </p>
        </div>

        <div class="max-w-5xl mx-auto" data-testid="hero-stats">
          <div class="bg-card/80 backdrop-blur-sm border border-border rounded-2xl p-8 md:p-12">
            <div class="text-center mb-8">
              <h2 class="text-2xl md:text-3xl font-bold mb-2 text-foreground">{t.heroVisual.title}</h2>
              <p class="text-muted-foreground text-lg">{t.heroVisual.subtitle}</p>
            </div>

            <div class="grid md:grid-cols-3 gap-6 mb-10">
              <div class="bg-neutral-800/50 border border-neutral-700 rounded-xl p-6 text-center" data-stat-label={t.heroVisual.stats[0].label}>
                <div class="text-sm text-muted-foreground mb-2 uppercase tracking-wide">{t.heroVisual.stats[0].label}</div>
                <div class="text-4xl font-bold text-neutral-500 line-through">{t.heroVisual.stats[0].value}</div>
                <div class="text-xs text-neutral-500 mt-1">{t.heroVisual.stats[0].unit}</div>
              </div>

              <div class="bg-accent-500/10 border border-accent-500/30 rounded-xl p-6 text-center relative overflow-hidden" data-stat-label={t.heroVisual.stats[1].label}>
                <div class="absolute top-2 right-2">
                  <Check class="w-6 h-6 text-accent-400" />
                </div>
                <div class="text-sm text-accent-400 mb-2 uppercase tracking-wide font-semibold">{t.heroVisual.stats[1].label}</div>
                <div class="text-4xl font-bold text-accent-400">{t.heroVisual.stats[1].value}</div>
                <div class="text-xs text-accent-300 mt-1">{t.heroVisual.stats[1].unit}</div>
              </div>

              <div class="bg-primary-500/10 border border-primary-500/30 rounded-xl p-6 text-center relative overflow-hidden" data-stat-label={t.heroVisual.stats[2].label}>
                <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 to-transparent" aria-hidden="true"></div>
                <div class="relative">
                  <div class="text-sm text-primary-400 mb-2 uppercase tracking-wide font-semibold">{t.heroVisual.stats[2].label}</div>
                  <div class="text-5xl font-bold text-primary-500">{t.heroVisual.stats[2].value}</div>
                  <div class="text-sm text-primary-300 mt-1">{t.heroVisual.stats[2].unit}</div>
                </div>
              </div>
            </div>

            <div class="border-t border-border pt-8">
              <p class="text-center text-sm text-muted-foreground mb-6 uppercase tracking-wider">{t.sections.incluye.enumServices}</p>
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
                {t.sections.incluye.featureCards.map(card => {
                  const Icon = iconMap[card.icon];
                  return (
                    <div class="flex flex-col items-center gap-2 p-4 bg-neutral-800/30 rounded-lg border border-border">
                      {Icon ? <Icon class="w-8 h-8 text-secondary-400" /> : <Shield class="w-8 h-8 text-secondary-400" />}
                      <span class="text-xs text-muted-foreground text-center">{card.title.split(' (')[0]}</span>
                    </div>
                  )
                })}
              </div>
            </div>

            <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
              <Button href={t.ctas.primary.url} variant="primary" size="lg" data-cta="primary" class="group shadow-lg shadow-primary-500/20">
                {t.ctas.primary.text}
                <ArrowRight class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" />
              </Button>
              <Button href={t.ctas.secondary.url} variant="outline" size="lg" data-cta="secondary">
                {t.ctas.secondary.text}
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="introduccion" class="py-20 px-4 bg-neutral-900/30">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-foreground">{t.sections.introduccion.title}</h2>
        <div class="space-y-6 text-lg text-neutral-300 leading-relaxed">
          <p set:html={processContent(t.sections.introduccion.content_1)} />
          <p set:html={processContent(t.sections.introduccion.content_2)} />
        </div>
      </div>
    </section>

    <section id="que-incluye" class="py-20 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-foreground">
            {t.sections.incluye.title}
          </h2>
          <p class="text-xl text-muted-foreground max-w-3xl mx-auto text-pretty">
            {t.sections.incluye.content}
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" data-testid="feature-cards">
          {t.sections.incluye.featureCards.map(card => {
            const Icon = iconMap[card.icon];
            return (
              <IncludedServiceCard
                Icon={Icon}
                title={card.title}
                price={card.price}
                description={card.description}
              />
            )
          })}
        </div>
      </div>
    </section>

    <section id="valor" class="py-20 px-4 bg-neutral-900/30">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <Badge variant="v0_accent" class="mb-6">
            {t.sections.valor.badge}
          </Badge>
          <h3 class="text-4xl md:text-5xl font-bold mb-6 text-foreground">
            {t.sections.valor.title}
          </h3>
          <p class="text-xl text-muted-foreground text-pretty leading-relaxed">
            {t.sections.valor.content}
          </p>
        </div>
        
        <div class="bg-card/80 backdrop-blur-sm border border-border rounded-2xl p-8 md:p-12" data-testid="valor-breakdown">
          <h3 id="breakdown-title" class="sr-only">Desglose de ahorro del pack</h3>
          <dl class="space-y-6">
            {t.sections.valor.breakdown.map(item => (
              <div 
                class:list={[
                  "flex items-center justify-between py-4",
                  item.type !== 'final' && "border-b border-border",
                  item.type === 'final' && "bg-primary-500/10 -mx-8 px-8 md:-mx-12 md:px-12 rounded-xl border border-primary-500/20 py-6"
                ]}
                data-breakdown-label={item.label}
              >
                <dt class:list={[
                  "text-lg",
                  item.type === 'savings' && "text-accent-400 font-semibold",
                  item.type === 'final' && "text-xl font-bold text-primary-400",
                  item.type === 'strikethrough' && "text-muted-foreground"
                ]}>{item.label}</dt>
                
                {item.type === 'final' ? (
                  <dd class="text-right">
                    <span class="text-5xl font-bold text-primary-500">{item.value}</span>
                    <span class="text-lg text-primary-300 ml-2">{item.unit}</span>
                  </dd>
                ) : (
                  <dd class:list={[
                    "text-3xl font-bold",
                    item.type === 'savings' && "text-accent-400",
                    item.type === 'strikethrough' && "text-neutral-500 line-through"
                  ]}>{item.value}</dd>
                )}
              </div>
            ))}
          </dl>
        </div>
      </div>
    </section>

    <section id="cta-final" class="py-20 px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-br from-primary-950/30 via-background to-background border border-primary-500/20 rounded-2xl p-8 md:p-12 text-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-foreground">
            {t.sections.ctaFinal.title}
          </h2>
          <p class="text-xl text-neutral-300 mb-8 text-pretty leading-relaxed max-w-2xl mx-auto">
            {t.sections.ctaFinal.content}
          </p>
          <p class="text-lg mb-10 text-muted-foreground" set:html={t.sections.ctaFinal.subtext} />
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href={t.ctas.primary.url} variant="default" size="lg" data-cta="primary" class="group shadow-lg shadow-primary-500/20">
              {t.ctas.primary.text}
              <ArrowRight class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" />
            </Button>
            <Button href={t.ctas.secondary.url} variant="outline" size="lg">
              {t.ctas.secondary.text}
            </Button>
          </div>
        </div>
      </div>
    </section>

  </main>
</BaseLayout>