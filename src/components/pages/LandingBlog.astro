---
// src/components/pages/LandingBlog.astro
import BaseLayout from "../../layouts/BaseLayout.astro";

// Tipos y Datos
import type { BlogCopy } from "../../i18n/utils";
import Button from "../ui/Button.astro";
import BlogCard, { type BlogPost } from "../ui/cards/BlogCard.astro";
// Datos Mock para desarrollo y test
import blogStubData from "../../data/blog-stub.json"; 

// Iconos
import BookOpen from "../ui/icons/BookOpen.astro";
import Grid from "../ui/icons/Grid.astro";
import Zap from "../ui/icons/Zap.astro";
import MapPin from "../ui/icons/MapPin.astro";
import TrendingUp from "../ui/icons/TrendingUp.astro";
import ShieldCheck from "../ui/icons/ShieldCheck.astro";
import ArrowRight from "../ui/icons/ArrowRight.astro";
import LinkedIn from "../ui/icons/LinkedIn.astro";
import ChevronDown from "../ui/icons/ChevronDown.astro";

interface Props {
  copy: BlogCopy;
  alternateUrl: string;
  schema: Record<string, any>;
}

const { copy, alternateUrl, schema } = Astro.props;
const { copy: t, lang, metadata } = copy;

// Mapeo de Iconos
const iconMap: Record<string, any> = {
  BookOpen,
  Grid,
  Zap,
  MapPin,
  TrendingUp,
  LinkedIn,
};

// Inicialmente mostramos todos (client-side filtering se encarga del resto)
const activeCategory = "all"; 
const filteredPosts: BlogPost[] = [];// blogStubData as BlogPost[]; 
---

<BaseLayout lang={lang as "es" | "en"} alternateUrl={alternateUrl}>
  <Fragment slot="head">
    <title>{metadata.title}</title>
    <meta name="description" content={metadata.description} />
  </Fragment>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} slot="json-ld" />

  <main class="bg-neutral-950 min-h-screen">
    
    {/* --- HERO SECTION --- */}
    <section id="hero" class="relative pt-32 pb-20 px-4 overflow-hidden">
        {/* Background gradient & Noise */}
        <div class="absolute inset-0 bg-gradient-to-b from-neutral-900 to-neutral-950 pointer-events-none"></div>
        <div class="absolute inset-0 opacity-20 mix-blend-soft-light pointer-events-none"
          style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 200 200%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noiseFilter%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.65%22 numOctaves=%223%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noiseFilter)%22 opacity=%221%22/%3E%3C/svg%3E');">
        </div>

        <div class="relative max-w-5xl mx-auto text-center z-10">
            {/* Badge */}
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-secondary-500/10 border border-secondary-500/30 rounded-full mb-8 animate-fade-in-up">
                <BookOpen class="w-4 h-4 text-secondary-400" />
                <span class="text-sm font-semibold text-secondary-300 tracking-wide uppercase">{t.hero.badge}</span>
            </div>

            {/* H1 */}
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight text-balance animate-fade-in-up" style="animation-delay: 100ms;" set:html={t.hero.h1} />

            {/* Subtitle */}
            <p class="text-lg md:text-xl text-neutral-300 mb-10 max-w-3xl mx-auto leading-relaxed text-pretty animate-fade-in-up" style="animation-delay: 200ms;">
                {t.hero.subtitle}
            </p>

            {/* CTA */}
            <div class="animate-fade-in-up" style="animation-delay: 300ms;">
                <Button href={t.hero.cta.anchor} variant="default" class="group shadow-lg shadow-primary-500/20">
                    {t.hero.cta.text}
                    <ChevronDown class="w-5 h-5 group-hover:translate-y-1 transition-transform" />
                </Button>
            </div>
        </div>
    </section>

    {/* --- CATEGORIES FILTER --- */}
    <section id="categories" class="py-12 px-4 border-t border-neutral-800/50 bg-neutral-950/50 backdrop-blur-sm sticky top-0 z-40">
        <div class="max-w-6xl mx-auto">
            <div class="flex flex-col md:flex-row items-center justify-between gap-6 mb-8 md:mb-0">
                <div class="text-center md:text-left">
                    <h2 class="text-2xl font-bold text-white mb-1">{t.categories.title}</h2>
                    <p class="text-neutral-400 text-sm">{t.categories.description}</p>
                </div>

                <div class="flex flex-wrap justify-center md:justify-end gap-2" role="tablist">
                    {t.categories.items.map((cat) => {
                        const Icon = iconMap[cat.icon] || Grid;
                        const isActive = activeCategory === cat.slug;
                        return (
                            <button
                                type="button"
                                role="tab"
                                aria-selected={isActive ? "true" : "false"}
                                class={`
                                    category-btn
                                    relative flex items-center gap-2 px-4 py-2 rounded-lg font-medium text-sm transition-all duration-300 border
                                    ${isActive 
                                        ? "bg-primary-700 border-primary-600 text-white shadow-lg shadow-primary-900/20" 
                                        : "bg-neutral-900 border-neutral-800 text-neutral-400 hover:bg-neutral-800 hover:text-neutral-200 hover:border-neutral-700"
                                    }
                                `}
                                title={cat.tooltip || cat.label}
                                data-category={cat.slug}
                                data-testid="category-filter"
                            >
                                <Icon class={`w-4 h-4 pointer-events-none ${isActive ? 'text-white' : 'text-neutral-500'}`} />
                                {cat.label}
                            </button>
                        );
                    })}
                </div>
            </div>
        </div>
    </section>

    {/* --- BLOG POSTS GRID --- */}
    <section id="latest-post" class="py-16 px-4 bg-neutral-950">
        <div class="max-w-7xl mx-auto">
            <div id="posts-grid" class={filteredPosts.length > 0 ? "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" : "hidden"}>
                {filteredPosts.map((post) => (
                    <BlogCard 
                        post={post} 
                        lang={lang as "es" | "en"} 
                        data-category={post.category} 
                    />
                ))}
            </div>

            {/* EMPTY STATE */}
            <div 
                id="empty-state" 
                data-testid="empty-state" 
                role="region"
                aria-label="Sin resultados"
                class={filteredPosts.length > 0 ? "hidden" : "text-center py-24 px-4 border border-dashed border-neutral-800 rounded-3xl bg-neutral-900/30"}
            >
                <div class="inline-flex items-center justify-center w-20 h-20 bg-neutral-800 rounded-full mb-6 animate-pulse">
                        <div class="text-4xl">üë®‚Äçüç≥</div>
                </div>
                <h3 class="text-2xl font-bold mb-3 text-white">{t.emptyState.title}</h3>
                <p class="text-neutral-400 mb-8 max-w-md mx-auto leading-relaxed">
                    {t.emptyState.message}
                </p>
                <Button
                    href={t.emptyState.cta.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    variant="outline"
                    class="border-secondary-500/30 text-secondary-400 hover:bg-secondary-500/10"
                >
                    {t.emptyState.cta.icon === "Linkedin" && <LinkedIn class="w-5 h-5 mr-2" />}
                    {t.emptyState.cta.text}
                </Button>
            </div>
        </div>
    </section>
  
    {/* --- NEWSLETTER SECTION --- */}
    <section id="newsletter" data-testid="newsletter" class="py-24 px-4 bg-neutral-900 border-y border-neutral-800 relative overflow-hidden">
        {/* Decorative Blobs */}
        <div class="absolute top-0 right-0 w-96 h-96 bg-primary-500/5 rounded-full blur-[100px] pointer-events-none"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-secondary-500/5 rounded-full blur-[100px] pointer-events-none"></div>

        <div class="max-w-3xl mx-auto text-center relative z-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-secondary-500/10 border border-secondary-500/20 rounded-full mb-8">
                <ShieldCheck class="w-8 h-8 text-secondary-400" />
            </div>

            <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white tracking-tight">{t.newsletter.title}</h2>
            <p class="text-neutral-400 mb-10 text-lg max-w-xl mx-auto">
                {t.newsletter.description}
            </p>

            <form class="flex flex-col sm:flex-row gap-4 max-w-lg mx-auto mb-6">
                <input
                    type="email"
                    placeholder={t.newsletter.placeholder}
                    required
                    aria-label="Email para newsletter"
                    class="flex-1 px-5 py-3 bg-neutral-950 border border-neutral-700 rounded-lg text-neutral-100 placeholder-neutral-500 focus:outline-none focus:border-primary-500 focus:ring-1 focus:ring-primary-500 transition-all"
                />
                <Button
                    type="submit"
                    variant="default"
                    disabled
                    class="whitespace-nowrap shadow-lg shadow-primary-500/20"
                >
                    {t.newsletter.button}
                </Button>
            </form>

            <p class="text-xs text-neutral-400 flex items-center justify-center gap-2">
                <ShieldCheck class="w-3 h-3" />
                {t.newsletter.disclaimer}
            </p>
        </div>
    </section>

    {/* --- CTA FINAL --- */}
    <section id="cta-final" data-testid="cta-final" class="relative py-24 px-4 overflow-hidden">
        {/* Background gradient */}
        <div class="absolute inset-0 bg-gradient-to-br from-primary-950 via-neutral-950 to-secondary-950" />
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-neutral-800/30 via-transparent to-transparent pointer-events-none"></div>

        <div class="relative max-w-4xl mx-auto text-center z-10">
            <h2 class="text-3xl md:text-5xl font-bold mb-6 text-white tracking-tight leading-tight">{t.ctaFinal.title}</h2>
            <p class="text-lg md:text-xl text-neutral-300 mb-10 max-w-2xl mx-auto leading-relaxed">
                {t.ctaFinal.content}
            </p>
            <Button
                href={t.ctaFinal.url}
                variant="primary"
                class="hover:scale-105 transform transition-all shadow-2xl shadow-white/10"
            >
                {t.ctaFinal.button}
                <ArrowRight class="w-5 h-5 ml-2" />
            </Button>
        </div>
    </section>

  </main>

<script is:inline>
  document.addEventListener('astro:page-load', () => {
    const buttons = document.querySelectorAll('.category-btn');
    const posts = document.querySelectorAll('article[data-category]');
    const emptyState = document.getElementById('empty-state');
    const postsGrid = document.getElementById('posts-grid');

    buttons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const category = btn.getAttribute('data-category');

        // 1. Update Active State (Visuals & ARIA)
        buttons.forEach(b => {
            // Remove active classes
            b.classList.remove('bg-primary-700', 'border-primary-600', 'text-white', 'shadow-lg', 'shadow-primary-900/20');
            // Add inactive classes
            b.classList.add('bg-neutral-900', 'border-neutral-800', 'text-neutral-400');
            // Update ARIA
            b.setAttribute('aria-selected', 'false');
            
            // Handle Icon color
            const icon = b.querySelector('svg');
            if(icon) {
                icon.classList.remove('text-white');
                icon.classList.add('text-neutral-500');
            }
        });
        
        // Add active classes to clicked button
        btn.classList.remove('bg-neutral-900', 'border-neutral-800', 'text-neutral-400');
        btn.classList.add('bg-primary-700', 'border-primary-600', 'text-white', 'shadow-lg', 'shadow-primary-900/20');
        btn.setAttribute('aria-selected', 'true');
        
        const activeIcon = btn.querySelector('svg');
        if(activeIcon) {
            activeIcon.classList.remove('text-neutral-500');
            activeIcon.classList.add('text-white');
        }

        // 2. Filter Logic
        let visibleCount = 0;
        posts.forEach(post => {
          const postCategory = post.getAttribute('data-category');
          // Reset inline display style to ensure classList works
          post.style.display = ''; 
          
          if (category === 'all' || postCategory === category) {
            post.classList.remove('hidden');
            visibleCount++;
          } else {
            post.classList.add('hidden');
          }
        });

        // 3. Empty State Logic
        if (visibleCount === 0) {
            if(emptyState) {
                emptyState.classList.remove('hidden');
                // Ensure styling classes are present (Tailwind utility)
                emptyState.style.display = 'block'; 
            }
            if(postsGrid) {
                postsGrid.classList.add('hidden');
            }
        } else {
            if(emptyState) {
                emptyState.classList.add('hidden');
                emptyState.style.display = 'none';
            }
            if(postsGrid) {
                postsGrid.classList.remove('hidden');
            }
        }
      });
    });
  });
</script>
</BaseLayout>
